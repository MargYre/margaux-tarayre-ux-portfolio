  // ... projets existants
  {
    id: 'nom-projet',           // ID unique (kebab-case)
    slug: 'nom-projet',         // URL slug (m√™me que l'ID)
    year: 2024,                 // Ann√©e du projet
    category: 'categorie',      // Cat√©gorie
    featured: true,             // Afficher sur la home ?
    tags: ['Tag1', 'Tag2'],     // Tags √† afficher
    image: 'üé®',                // Emoji ou chemin image (optionnel)
